{
  "compilerOptions": {
    "target": "ES6",               
    "module": "CommonJS",          
    "rootDir": "./src",            
    "outDir": "./dist",            
    "strict": true,                
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,          

    /* Module Resolution */
    "moduleResolution": "node",    
    "resolveJsonModule": true      
  },
  "include": ["src"],              
  "exclude": ["node_modules"]      
}
